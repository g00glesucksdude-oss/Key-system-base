-- b64_test.lua
-- Standalone tester for your b64 module

-- Always use the RAW GitHub URL, not the "blob" page
local b64 = loadstring(game:HttpGet(
    "https://raw.githubusercontent.com/g00glesucksdude-oss/Complicated-key-system/main/b64"
))()

-- Example string
local original = "Hello, Base64 in Lua!"

-- Encode
local encoded = b64.encode(original)
print("Original:", original)
print("Encoded :", encoded)

-- Decode
local decoded, err = b64.decode(encoded)
if not decoded then
    print("Decode error:", err)
else
    print("Decoded :", decoded)
end

-- Round‑trip check
if decoded == original then
    print("✅ Round‑trip successful")
else
    print("❌ Round‑trip failed")
end
